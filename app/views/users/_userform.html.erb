<div id="form" class="small-margin">
  <div>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-4 col-md-offset-4">

          <%= simple_form_for(@user, html: { multipart: true }) do |f| %>
            <%= f.error_notification %>


              <%= f.input :first_name %>
              <%= f.input :last_name %>
              <%= f.input :age %>
              <%= f.input :description%>
              <%= f.input :email %>
              <%= f.input :picture, as: :file %>


            <%= f.button :submit, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
