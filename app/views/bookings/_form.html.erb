<%= form_for [@flat, @booking] do |f| %>
              <p><strong>Check-in Date</strong></p>
              <div class="form-group">
                <label class="sr-only" for="check-in">Check-in</label>
                <%= f.text_field :start_date, class: "form-control", :data => {:provide => :datepicker, 'date-format' => "dd/mm/yyyy"}, placeholder: "check-in" %>
              </div>
              <p><strong>Check-out Date</strong></p>
              <div class="form-group">
                <label class="sr-only" for="check-out">Check-out</label>
                <%= f.text_field :end_date, class: "form-control", :data => {:provide => :datepicker, 'date-format' => "dd/mm/yyyy"}, placeholder: "check-out" %>
              </div>
              <p><!--strong>Number of Guests</strong></p-->
              <div class="form-group">
                <label class="sr-only" for="capacity">Capacity</label>
                <%#= f.number_field :guests, class: "form-control", placeholder: "Number of guest"%>
              </div>

              <% if @booking.save %>
                <p><%= @flat.price %>$ x <%= (@booking.end_date - @booking.start_date).to_i%> nights - <%= @booking_price %></p>
              <% end %>

              <%= submit_tag 'Send a request', class: "btn btn-primary" %>
          <% end %>
