<div >
  <div class="title-margin text-center">
    <h1>Flats</h1>
  </div>

  <div class="container">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-xs-12 col-md-4">

          <div class="card-white">
            <div class="text-center">
              <%= image_tag flat.picture.url(:medium) %>
            </div>
            <h3><strong><%= link_to flat.title, flat_path(flat) %></strong></h3>
            <p><%= flat.house_type %></p>
          </div>

        </div>
      <% end %>
    </div>
  </div>
