<div class = "text-center">

  <h1>Houses</h1>

  <div class="container">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-xs-12 col-md-4">
          <div class="card-white">
            <p><strong><%= link_to flat.title, flat_path(flat) %></strong></p>
            <p><%= flat.city %></p>
            <p><%= flat.capacity %> - <%= flat.price %>$/nights</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
