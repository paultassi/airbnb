<div class = "text-center">

  <h1>Houses</h1>

  <div class="container">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-xs-12 col-md-4">

          <div class="card-white">
            <%= image_tag flat.picture.url(:medium) %>

            <p><strong><%= link_to flat.title, flat_path(flat) %></strong></p>
            <p><%= flat.zip_code %> - <%= flat.city %></p>
            <p><%= flat.house_type %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
